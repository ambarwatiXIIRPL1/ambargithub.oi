package devina;
import java.util.Scanner; 

public class devina {
public static void main(String[] args) {
  int a,b; //variable  
    System.out.println("-----= Kalkulator Sederhana =-----"); //Menampilkan Kata;
    System.out.print (" Nilai ke 1 = "); //Menampilkan Kata;
    Scanner scan1 = new Scanner (System.in);
    a = scan1.nextInt();
    
    System.out.print (" Nilai ke 2 = "); //Menampilkan Kata;
    Scanner scan2 = new Scanner (System.in);
    a = scan2.nextInt();
    
    System.out.print (a+"+"+b+"= "); //Menampilkan Kata"
    System.out.println (a+b); //Menampilkan Penjumlahan"
    System.out.print (a+"-"+b+"= "); //Menampilkan Kata"
    System.out.println (a-b); //Menampilkan Penjumlahan"
    System.out.print (a+":"+b+"= "); //Menampilkan Kata"
    System.out.println (a/b); //Menampilkan Penjumlahan"
    System.out.print (a+"x"+b+"= "); //Menampilkan Kata"
    System.out.println (a*b); //Menampilkan Penjumlahan"  
    System.out.print (a+"modulus"+b+"= "); //Menampilkan Kata"
    System.out.println (a%b); //Menampilkan Penjumlahan"  
    }
    
}
